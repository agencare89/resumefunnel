<body>
	<% include common/nav.ejs %>

	<div class="container">
		<h1>
			Create a new job posting<br />
			<small>Here you can create a new job post. Make sure you provide a good description of the position, and fill out all of the fields before submitting</small>
		</h1>
		<hr>
		<form role="form">
			<h3>Job Title</h3>
			<div class="form-group">
				<input type="text" class="form-control" id="firstNameInput" placeholder="Job Title">
			</div>

			<h3>Job Description</h3>
			<div class="form-group">
				<textarea class="form-control" id="jobDescTextArea" rows="5" placeholder="Please enter a job description..." required></textarea>
			</div>

			<h3>Desirable Qualifications</h3>
			<div class="form-group qualifications">
				<input type="text" class="form-control" class="qualificationInput" placeholder="Qualification" required />
			</div>
			<div class="form-group">
				<button type="button" class="btn btn-default addQualification">Add Field <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
			</div>

			<h3>Minimum Requirements</h3>
			<div class="form-group requirements">
				<input type="text" class="form-control" class="requirementInput" placeholder="Requirement" required />
			</div>
			<div class="form-group">
				<button type="button" class="btn btn-default addRequirement">Add Field <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
			</div>

			<h3>Application Due Date</h3>
			<div class="form-group">
				<div class='input-group date' id='dueDatePicker'>
					<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    <input type='text' class="form-control" placeholder="DD/MM/YYYY" required />
                </div>
			</div>

			<h3>Other Notes</h3>
			<div class="form-group">
				<textarea class="form-control" id="jobDescTextArea" rows="5" placeholder="Please enter a job description..."></textarea>
			</div>
			<button type="submit" class="btn btn-primary">Post Job Opportunity</button>
		</form>
	</div><!-- /container -->

	<% include common/footer.ejs %>

	<script src="js/lib/jquery-2.1.4.min.js"></script>
	<script src="js/lib/bootstrap.min.js"></script>
	<script src="js/lib/moment.min.js"></script>
	<script src="js/lib/bootstrap-datetimepicker.js"></script>
	<script src="js/lib/ie10-viewport-bug-workaround.js"></script>
	<script src="js/new.js"></script>
	<script src="js/scripts.js"></script>
</body>
</html>